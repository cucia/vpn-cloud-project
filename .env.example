# VPN Cloud Project - Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=db
DB_USER=vpn_api
DB_PASSWORD=change_this_in_production
DB_NAME=vpn_users
MYSQL_ROOT_PASSWORD=change_this_in_production

# Application Configuration
SECRET_KEY=change_this_secret_key_in_production
FLASK_ENV=production

# WireGuard Configuration
WIREGUARD_HOST=wireguard
WIREGUARD_PORT=51820
WIREGUARD_SUBNET=10.13.13.0/24
WIREGUARD_PUBLIC_KEY=server_public_key_here
SERVER_ENDPOINT=your-server-ip:51820

# Server Configuration (for production)
SERVER_URL=https://vpn.yourdomain.com
DOMAIN=vpn.yourdomain.com

# AWS Configuration (for cloud deployment)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id
ECR_REPOSITORY=vpn-cloud-project

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO
